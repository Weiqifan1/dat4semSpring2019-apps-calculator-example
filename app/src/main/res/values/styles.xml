<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>
    <style name="AppTheme.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>
    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>
    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>
    <style name="CalculatorKey" parent="Widget.AppCompat.Button">
        <item name="android:background">@drawable/button</item>
        <item name="android:layout_height">84dp</item>
        <item name="android:layout_width">80dp</item>
        <item name="android:textSize">@dimen/command_text_size</item>
        <item name="android:onClick">doOperation</item>
    </style>
    <style name="CalculatorKey.Digit" parent="CalculatorKey">
        <item name="android:textSize">@dimen/digit_text_size</item>
        <item name="android:onClick">doDigit</item>
    </style>
    <style name="CalculatorKey.Operator" parent="CalculatorKey">
        <item name="android:textSize">@dimen/digit_text_size</item>
        <item name="android:textColor">@color/operator_text_color</item>
        <item name="android:background">@drawable/button_operator</item>
    </style>
</resources>
